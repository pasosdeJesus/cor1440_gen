<%= simple_form_for @proyectofinanciero do |f| %>
  <%= f.simple_fields_for :informefinanciero, 
    child_index: params[:index] do |subf| %>
    <%= turbo_stream.replace "agregar-informefinanciero-proyectofinanciero" do %>
      <%= f.submit "Agregar Informe Financiero",
        class: "btn btn-sm btn-primary",
        data:  {
          disable_with: false 
        },
        formaction: cor1440_gen.crear_informefinanciero_proyectofinanciero_path(
          subf.index.to_i + 1
        ),
        formmethod: :post,
        formnovalidate: true,
        id: "agregar-informefinanciero-proyectofinanciero",
        name: "agregar-informefinanciero-proyectofinanciero" %>
  <% end %>
  <%= turbo_stream.append "informesfinancieros_proyectofinanciero_marco" do %>
    <%= render "/cor1440_gen/proyectosfinancieros/informefinanciero_campos", f: subf %>
  <% end %>
<% end %>
<% end %>
