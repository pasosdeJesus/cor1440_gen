<% col = Cor1440Gen::Indicadorpf.all %>
<% sel = nil %>
<% if f.object.indicadorpf_id %>
  <% col = col.where(id: f.object.indicadorpf_id) %>
  <% sel = f.object.indicadorpf_id %>
<% elsif params && params['filtro'] && params['filtro']['busproyectofinanciero_id'] && params['filtro']['busproyectofinanciero_id'].to_i > 0 %>
  <% col = col.where(proyectofinanciero_id: params['filtro']['busproyectofinanciero_id'].to_i) %>
<% end %>

<%= f.input :indicadorpf_id,
  collection: col,
  label_method: lambda {|t| t.presenta_nombre},
  value_method: :id,
  selected: sel,
  input_html: { class: 'tom-select' }
%>

