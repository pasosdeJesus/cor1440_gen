<% tasaej = f.object.tasaej ? f.object.tasaej : 1.0 %>
<div class='row'>
  <div class='col-sm-4'>
    <%= f.label :tipomoneda %>
  </div>
  <div class='col-sm-4'>
    <%= f.association :tipomoneda,
      collection: Cor1440Gen::Tipomoneda.habilitados,
      label_method: :nombre,
      value_method: :id,
      label: false
    %>
  </div>
</div>

