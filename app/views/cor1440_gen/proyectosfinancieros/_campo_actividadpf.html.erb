<p></p>
<div class="panel panel-default">
  <div class="panel-heading">Actividades de marco lógico</div>
  <div class="panel-body table-responsive" style='overflow-x:scroll;'>
    <div class="div-actividadespf">
      <table border=1 width="100%">
        <thead>
          <tr>
            <th style='min-width: 8rem'>Ref. Resultado</th>
            <th style='min-width: 4rem'>Código</th>
            <th style='min-width: 18rem'>Actividad de marco lógico</th>
            <th style='min-width: 18rem'>Detalle</th>
            <th style='min-width: 8rem'>Formulario</th>
            <th style='min-width: 14rem'>Hereda de</th>
            <th style='min-width: 4rem'>Acciones</th>
          </tr>
        </thead>
        <tbody id="actividadespf">
          <%= f.simple_fields_for :actividadpf, 
            f.object.actividadpf.order(:id) do |o| %>
            <%= render 'actividadpf_campos', f:  o %>
          <% end %>
        </tbody>
      </table>
      <div class="links">
        <%= link_to_add_association 'Agregar actividad', f, :actividadpf, {
          :"data-association-insertion-node" => "tbody#actividadespf", 
          :"data-association-insertion-method" => "append", 
          partial: 'actividadpf_campos',
          class: 'btn-primary', 
          "data-ajax" => cor1440_gen.new_actividadespf_path,
          "data-ajaxdata" => "proyectofinanciero_id" } %>
      </div> <!-- links -->
    </div> <!-- .div-actividadespf -->
  </div> <!-- panel-body -->
</div> <!-- panel -->
