<%= turbo_frame_tag "objetivopf_#{f.index}", class: 'div-tabla-fila nested-fields' do %>
  <% f.object = Cor1440Gen::Objetivopf.new() if !f.object  %>
  <div class="div-tabla-celda">
    <%= f.input :numero, 
      label: false %>
  </div>
  <div class="div-tabla-celda">
    <%= f.input :objetivo, as: :text, input_html: {rows: 3}, label: false %>
  </div>
  <div class="div-tabla-celda">
    <%= f.input :id, as: :hidden %>

    <%= f.submit "Eliminar", 
      formaction: cor1440_gen.eliminar_objetivopf_proyectofinanciero_path(
        id: f.object.id, index: f.index || params[:index]
      ),
      formmethod: :delete, 
      formnovalidate: true, 
      class: 'btn btn-sm btn-danger',
      data: { 
        turbo_frame: "objetivopf_#{f.index}",
        disable_with: false
      } %>
    <div><%= f.error_notification %></div>
  </div>
<% end %>

