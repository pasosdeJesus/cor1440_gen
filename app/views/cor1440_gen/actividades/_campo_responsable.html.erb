<%= f.association :responsable,
  collection: current_usuario.oficina_id ?  Usuario.where(fechadeshabilitacion: nil, 
                oficina_id: current_usuario.oficina_id).order(:nombre) :
      Usuario.where(fechadeshabilitacion: nil).order(:nombre),
  include_blank: false,
  label: "Responsable",
  label_method: lambda { |t| 
    r = t.nusuario
    if t.nombre then r += " - " + t.nombre end
    r 
  },
  value_method: :id,
  selected:  f.object.usuario_id ?  f.object.usuario_id : current_usuario.id,
  input_html: { class: 'chosen-select' }
%>
