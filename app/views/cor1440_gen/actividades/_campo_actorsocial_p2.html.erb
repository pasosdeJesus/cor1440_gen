<% # f es el formulario que se presenta %>
<% # actoresdisp son los Sip::Actorsocial disponibles para elegir %>
<% lids = actoresdisp.map(&:id) | f.object.actorsocial_ids %>
<% a2 = Sip::Actorsocial.joins(:grupoper).where(id: lids).
  order('sip_grupoper.nombre') %>
<%= f.association :actorsocial, 
  collection: a2,
  label_method: :presenta_nombre, 
  value_method: :id,
  input_html: { class: 'chosen-select' }
%>
