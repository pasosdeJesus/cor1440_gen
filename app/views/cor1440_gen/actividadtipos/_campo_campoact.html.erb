<%= f.input :id, as: :hidden %>
<div class="panel panel-default">
  <div class="panel-heading">Campos por agregar</div>
  <div class="panel-body">

    <div class="div-camposact">
      <table border=1 width="100%">
        <thead>
          <tr>
            <th width="25%">Nombre Campo</th>
            <th>Ayuda en el uso</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody id="camposact">
          <%= f.simple_fields_for :campoact, f.object.campoact.order(:id) do |o| %>
            <%= render 'cor1440_gen/actividadtipos/campoact_campos', f:  o %>
          <% end %>
        </tbody>
      </table>
      <div class="links">
        <%= link_to_add_association 'Agregar campo', f, :campoact, {
          :"data-association-insertion-node" => "tbody#camposact", 
          :"data-association-insertion-method" => "append", 
          partial: 'cor1440_gen/actividadtipos/campoact_campos',
          class: 'btn-primary', 
          "data-ajax" => cor1440_gen.new_campoact_url,
          "data-ajaxdata" => "actividadtipo_id" } %>
      </div> <!-- links -->
    </div> <!-- .div-camposact -->
  </div><!-- panel-body -->
</div><!-- panel -->
