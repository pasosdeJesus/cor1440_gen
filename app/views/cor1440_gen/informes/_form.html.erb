<%= simple_form_for @informe,
  :url => cor1440_gen.informes_path(@informe).sub(/\./,"/"), 
  :html => { :class => 'form-horizontal' } do |f| 
%>
  <%= f.error_notification %>

  <%= f.input :titulo %>
  <div class="panel panel-default">
    <div class="panel-heading">Filtro para el Listado de Actividades</div><div class="panel-body">
      <%= f.input :filtrofechaini,
        :input_html => { "data-behaviour" => "datepicker"},
        :as => :string
      %>
      <%= f.input :filtrofechafin,
        :input_html => { "data-behaviour" => "datepicker"},
        :as => :string
      %>
      <%= f.association :proyectofinanciero,
        collection: Cor1440Gen::Proyectofinanciero.habilitados,
        label_method: :nombre, 
        value_method: :id
      %>
      <%= f.association :proyecto,
        collection: Cor1440Gen::Proyecto.habilitados,
        label_method: :nombre, 
        value_method: :id
      %>
      <%= f.association :actividadarea,
        collection: Cor1440Gen::Actividadarea.habilitados,
        label_method: :nombre, 
        value_method: :id
      %>

      <%= render partial: 'otros_filtros', locals: {f: f} %>

    </div> <!-- panel-body -->
  </div> <!-- panel panel-default -->

  <div class="panel panel-default">
    <div class="panel-heading">Columnas del Listado de Actividades</div><div class="panel-body">
      <table border="1">
        <tr>
          <td>
            <%= f.input :columnanombre, label: 'Nombre' %>
          </td>
          <td>
            <%= f.input :columnatipo,
              label: Cor1440Gen::Actividad.human_attribute_name(:actividadtipo)
            %>
          </td>
          <td>
            <%= f.input :columnaobjetivo,
              label: Cor1440Gen::Actividad.human_attribute_name(:objetivo)
            %>
          </td>
          <td>
            <%= f.input :columnaproyecto,
              label: Cor1440Gen::Actividad.human_attribute_name(:proyecto)
            %>
          </td>
          <td>
            <%= f.input :columnapoblacion,
              label: Cor1440Gen::Actividad.human_attribute_name(:poblacion)
            %>
          </td>
        </tr>
      </table>
    </div> <!-- panel-body -->
  </div> <!-- panel panel-default -->

  <div class="panel panel-default">
    <div class="panel-heading">Campos Narrativos</div><div class="panel-body">
      <%= f.input :recomendaciones, as: :text %>
      <%= f.input :avances, as: :text %>
      <%= f.input :logros, as: :text %>
      <%= f.input :dificultades, as: :text %>
      <%= render partial: 'otros_narrativos', locals: {f: f} %>
    </div> <!-- panel-body -->
  </div> <!-- panel panel-default -->

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      cor1440_gen.actividades_path, :class => 'btn' 
    %>
  </div>
<% end %>
